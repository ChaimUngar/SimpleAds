@using SimpleAdsAuth.Data
@model List<Ad>

<body>

    <div b-gyvb0mk0dj="" class="container" style="margin-top:80px;">
        <main b-gyvb0mk0dj="" role="main" class="pb-3">

            @foreach (var ad in Model)
            {
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <div class="bg-light p-4 rounded shadow mb-3">
                            <h5>Listed by @ad.ListerName</h5>
                            <h5>Listed on @ad.DateCreated.ToLongDateString()</h5>
                            <h5>Phone Number: @ad.Number</h5>
                            <h3>Details:</h3>
                            <p>@ad.Details</p>


                            @if (User.Identity.IsAuthenticated && ad.CanDelete)
                            {
                                <form method="post" action="/home/deletead">
                                    <input type="hidden" name="id" value="@ad.ListerId">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            }

                        </div>
                    </div>
                </div>

            }


        </main>
    </div>

</body>